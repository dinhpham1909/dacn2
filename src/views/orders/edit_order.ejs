<%- include('../pages/menu'); %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Starter Page</h1>
                </div>
                <!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Starter Page</li>
                    </ol>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Horizontal Form</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form class="form-horizontal" method="post" action="/update_order">
                            <div class="card-body">
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">ID</label>
                                    <div class="col-sm-10">
                                        <input
                                            type="text"
                                            readonly="readonly"
                                            name="id"
                                            value="<%= oneEvent.id %>"
                                            class="form-control"
                                            id="inputEmail3"
                                            placeholder="ID"
                                        />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">Id User</label>
                                    <div class="col-sm-10">
                                        <input
                                            type="text"
                                            name="id_user"
                                            value="<%= oneEvent.id_user %>"
                                            class="form-control"
                                            id="inputEmail3"
                                            placeholder="User"
                                        />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">Id Order Details</label>
                                    <div class="col-sm-10">
                                        <input
                                            type="text"
                                            name="id_orderDetails"
                                            value="<%= oneEvent.id_orderDetails %>"
                                            class="form-control"
                                            id="inputEmail3"
                                            placeholder="ID Order Details"
                                        />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">Price</label>
                                    <div class="col-sm-10">
                                        <input
                                            type="text"
                                            name="price"
                                            value="<%= oneEvent.price %>"
                                            class="form-control"
                                            id="inputEmail3"
                                            placeholder="Price"
                                        />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">Status</label>
                                    <div class="col-sm-10">
                                        <input
                                            type="text"
                                            name="status"
                                            value="<%= oneEvent.status %>"
                                            class="form-control"
                                            id="inputEmail3"
                                            placeholder="Status"
                                        />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">ID User Buy</label>
                                    <div class="col-sm-10">
                                        <input
                                            type="text"
                                            name="id_userBuy"
                                            value="<%= oneEvent.id_userBuy %>"
                                            class="form-control"
                                            id="inputEmail3"
                                            placeholder="Status"
                                        />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">Chi Nh√°nh</label>
                                    <div class="col-sm-10">
                                        <select name="id_CN" class="form-control select2" style="width: 100%">
                                            <% for(let i = 0; i< chinhanhs.length ;i++){ %>
                                            <option value="<%=chinhanhs[i].id%>"><%=chinhanhs[i].name%></option>
                                            <% } %>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-info">Sign in</button>
                                <button type="submit" class="btn btn-default float-right">Cancel</button>
                            </div>
                            <!-- /.card-footer -->
                        </form>
                    </div>

                    <!-- /.card -->
                </div>
                <!-- /.col-md-6 -->

                <!-- /.col-md-6 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>
